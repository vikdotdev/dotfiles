# -- windows & pane creation ---------------------------------------------------
tmux_conf_new_window_retain_current_path=false
tmux_conf_new_pane_retain_current_path=true
tmux_conf_new_pane_reconnect_ssh=false
tmux_conf_new_session_prompt=false

# -- display -------------------------------------------------------------------
tmux_conf_24b_colour=true
<% if @theme.dark? %>
github_color_red='#ea4a5a'
github_color_green='#34d058'
github_color_yellow='#ffea7f'
github_color_blue='#0366d6'
github_color_magenta='#b392f0'
github_color_cyan='#39c5cf'
github_color_black='#24292e'
github_color_gray='#586069'
github_color_white='#d1d5da'
github_color_blink='#2b3642'
<% elsif @theme.light? %>
github_color_red='#d73a49'
github_color_green='#28a745'
github_color_yellow='#dbab09'
github_color_blue='#0366d6'
github_color_magenta='#5a32a3'
github_color_cyan='#0598bc'
github_color_black='#24292e'
github_color_gray='#6a737d'
github_color_white='#ffffff'
github_color_blink='#ebeef0'
<% end %>

# window style
tmux_conf_theme_window_fg="default"
tmux_conf_theme_window_bg="default"

tmux_conf_theme_highlight_focused_pane=false
tmux_conf_theme_focused_pane_bg="$github_color_gray"
tmux_conf_theme_pane_border_style=thin

# pane borders colours:
tmux_conf_theme_pane_border="$github_color_gray"
tmux_conf_theme_pane_active_border="$github_color_green"

# pane indicator colours (when you hit <prefix> + q)
<% if @theme.dark? %>
tmux_conf_theme_pane_indicator="$github_color_white"
tmux_conf_theme_pane_active_indicator="$github_color_blue"
<% elsif @theme.light? %>
tmux_conf_theme_pane_indicator="$github_color_black"
tmux_conf_theme_pane_active_indicator="$github_color_blue"
<% end %>

# status line style
tmux_conf_theme_message_fg="$github_color_white"
tmux_conf_theme_message_bg="$github_color_blue"
tmux_conf_theme_message_attr="bold"

# status line command style (<prefix> : Escape)
tmux_conf_theme_message_command_fg="$github_color_white"
tmux_conf_theme_message_command_bg="$github_color_blue"
tmux_conf_theme_message_command_attr="bold"

# window modes style
tmux_conf_theme_mode_fg="$github_color_white"
tmux_conf_theme_mode_bg="$github_color_blue"

tmux_conf_theme_mode_attr="bold"

# status line style
<% if @theme.dark? %>
tmux_conf_theme_status_fg="$github_color_white"
tmux_conf_theme_status_bg="$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_status_fg="$github_color_black"
tmux_conf_theme_status_bg="$github_color_white"
<% end %>
tmux_conf_theme_status_attr="none"

# terminal title
#   - built-in variables are:
#     - #{circled_window_index}
#     - #{circled_session_name}
#     - #{hostname}
#     - #{hostname_ssh}
#     - #{hostname_full}
#     - #{hostname_full_ssh}
#     - #{username}
#     - #{username_ssh}
tmux_conf_theme_terminal_title="#h #S ● #I #W"

# window status style
#   - built-in variables are:
#     - #{circled_window_index}
#     - #{circled_session_name}
#     - #{hostname}
#     - #{hostname_ssh}
#     - #{hostname_full}
#     - #{hostname_full_ssh}
#     - #{username}
#     - #{username_ssh}
<% if @theme.dark? %>
tmux_conf_theme_window_status_fg="$github_color_white"
tmux_conf_theme_window_status_bg="$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_window_status_fg="$github_color_black"
tmux_conf_theme_window_status_bg="$github_color_white"
<% end %>
tmux_conf_theme_window_status_attr="none"
tmux_conf_theme_window_status_format="#I #W"

# window current status style
#   - built-in variables are:
#     - #{circled_window_index}
#     - #{circled_session_name}
#     - #{hostname}
#     - #{hostname_ssh}
#     - #{hostname_full}
#     - #{hostname_full_ssh}
#     - #{username}
#     - #{username_ssh}
tmux_conf_theme_window_status_current_fg="$github_color_white"
tmux_conf_theme_window_status_current_bg="$github_color_blue"
tmux_conf_theme_window_status_current_attr="bold"
tmux_conf_theme_window_status_current_format="#I #W"

# window activity status style
<% if @theme.dark? %>
tmux_conf_theme_window_status_activity_fg="$github_color_red"
tmux_conf_theme_window_status_activity_bg="$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_window_status_activity_fg="$github_color_red"
tmux_conf_theme_window_status_activity_bg="$github_color_white"
<% end %>
tmux_conf_theme_window_status_activity_attr="bold"

# window bell status style
tmux_conf_theme_window_status_bell_fg="$github_color_red"
tmux_conf_theme_window_status_bell_bg="default"
tmux_conf_theme_window_status_bell_attr="blink,bold"

# window last status style
<% if @theme.dark? %>
tmux_conf_theme_window_status_last_fg="$github_color_green"
tmux_conf_theme_window_status_last_bg="$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_window_status_last_fg="$github_color_green"
tmux_conf_theme_window_status_last_bg="$github_color_white"
<% end %>
tmux_conf_theme_window_status_last_attr="bold"

# status left/right sections separators
tmux_conf_theme_left_separator_main=""
tmux_conf_theme_left_separator_sub="|"
tmux_conf_theme_right_separator_main=""
tmux_conf_theme_right_separator_sub="|"

# status left/right content:
#   - separate main sections with "|"
#   - separate subsections with ","
#   - built-in variables are:
#     - #{battery_bar}
#     - #{battery_hbar}
#     - #{battery_percentage}
#     - #{battery_status}
#     - #{battery_vbar}
#     - #{circled_session_name}
#     - #{hostname_ssh}
#     - #{hostname}
#     - #{hostname_full}
#     - #{hostname_full_ssh}
#     - #{loadavg}
#     - #{mouse}
#     - #{pairing}
#     - #{prefix}
#     - #{root}
#     - #{synchronized}
#     - #{uptime_y}
#     - #{uptime_d} (modulo 365 when #{uptime_y} is used)
#     - #{uptime_h}
#     - #{uptime_m}
#     - #{uptime_s}
#     - #{username}
#     - #{username_ssh}

# status left style
<% if @theme.dark? %>
tmux_conf_theme_status_left_fg="$github_color_gray,$github_color_gray"
tmux_conf_theme_status_left_bg="$github_color_black,$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_status_left_fg="$github_color_black,$github_color_gray"
tmux_conf_theme_status_left_bg="$github_color_white,$github_color_white"
<% end %>
tmux_conf_theme_status_left_attr="bold,none"
# status right style
<% if @theme.dark? %>
tmux_conf_theme_status_right_fg="$github_color_gray,$github_color_gray,$github_color_gray"
tmux_conf_theme_status_right_bg="$github_color_black,$github_color_black,$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_status_right_fg="$github_color_gray,$github_color_gray,$github_color_black"
tmux_conf_theme_status_right_bg="$github_color_white,$github_color_white,$github_color_white"
<% end %>
tmux_conf_theme_status_right_attr="none,none,bold"

# pairing indicator
tmux_conf_theme_pairing="Pa"                 # U+2687
tmux_conf_theme_pairing_fg="$github_color_magenta"
tmux_conf_theme_pairing_bg="none"
tmux_conf_theme_pairing_attr="none"

# prefix indicator
tmux_conf_theme_prefix="Pr"                  # U+2328
tmux_conf_theme_prefix_fg="$github_color_green"
tmux_conf_theme_prefix_bg="none"
tmux_conf_theme_prefix_attr="bold"

# mouse indicator
tmux_conf_theme_mouse="Mo"                   # U+2197
tmux_conf_theme_mouse_fg="$github_color_cyan"
tmux_conf_theme_mouse_bg="none"
tmux_conf_theme_mouse_attr="none"

# zoom indicator
tmux_custom_zoom_text="[Zoomed In]"
tmux_custom_zoom_colors="#[fg=$github_color_red]"
tmux_custom_zoom="$tmux_custom_zoom_colors #{?window_zoomed_flag,$tmux_custom_zoom_text,} "

# root indicator
tmux_conf_theme_root="!"
tmux_conf_theme_root_fg="$github_color_red"
<% if @theme.dark? %>
tmux_conf_theme_root_bg="$github_color_black"
<% elsif @theme.light? %>
tmux_conf_theme_root_bg="$github_color_white"
<% end %>
tmux_conf_theme_root_attr="bold,blink"

# synchronized indicator
tmux_conf_theme_synchronized="Sy"            # U+268F
tmux_conf_theme_synchronized_fg="none"
tmux_conf_theme_synchronized_bg="none"
tmux_conf_theme_synchronized_attr="none"

# symbols used to indicate whether battery is charging or discharging
tmux_conf_battery_status_charging="Ch"       # U+2191
tmux_conf_battery_status_discharging="Di"    # U+2193

# clock style (when you hit <prefix> + t)
# you may want to use %I:%M %p in place of %R in tmux_conf_theme_status_right
tmux_conf_theme_clock_colour="$github_color_green"
tmux_conf_theme_clock_style="24"

tmux_conf_theme_status_left=" #S | ↑#{?uptime_y, #{uptime_y}y,}#{?uptime_d, #{uptime_d}d,}#{?uptime_h, #{uptime_h}h,}#{?uptime_m, #{uptime_m}m,} "

tmux_conf_theme_status_right="$tmux_custom_zoom #{prefix}#{mouse}#{pairing}#{synchronized} #{?battery_percentage,BAT #{battery_percentage},} #{?battery_status,#{battery_status},} , %R %d %b | #{username}#{root} | #{hostname} "

# -- clipboard -----------------------------------------------------------------
tmux_conf_copy_to_os_clipboard=true

# -- user customizations -------------------------------------------------------
set -g history-limit 100000
set -g mouse on
set -g status-keys vi
set -g mode-keys vi
set -g status-position top
set -s escape-time 1

set -g focus-events on
set-hook -g pane-focus-in 'selectp -P bg=$github_color_blink; run "sleep 0.3"; selectp -P bg=default'

unbind C-a
unbind C-b
set-option -g prefix C-f
bind-key C-f send-prefix

# loads bashrc into tmux windows
set-option -g default-shell "/bin/bash"
set-option -g renumber-windows off

bind -r H resize-pane -L 15
bind -r J resize-pane -D 15
bind -r K resize-pane -U 15
bind -r L resize-pane -R 15
bind -r o last-window

set -g base-index 1

set -g default-terminal screen-256color
set-option -ga terminal-overrides ",screen-256color:Tc"

# -- plugins ------------------------------------------------------------------
tmux_conf_update_plugins_on_launch=true
tmux_conf_update_plugins_on_reload=false
tmux_conf_uninstall_plugins_on_reload=true

set -g @plugin 'schasse/tmux-jump'
set -g @plugin 'tmux-plugins/tmux-urlview'
set -g @plugin 'tmux-plugins/tmux-resurrect'

set -g @jump-key 'g'
set -g @urlview-key 'u'
