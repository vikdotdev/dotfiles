# default variables
export EDITOR="nvim"
export GIT_EDITOR="$EDITOR"
export PAGER="less"
export LESS='-R --mouse --wheel-lines=3'

# xdg and ext
export EXT_XDG_NOTES_DIR="$HOME/<%= @config.dig('home_path', 'notes') %>"
export EXT_XDG_REPOS_DIR="$HOME/<%= @config.dig('home_path', 'repos') %>"
export EXT_XDG_VENDOR_DIR="$HOME/<%= @config.dig('home_path', 'vendor') %>"
export EXT_XDG_DOTFILES_DIR="$HOME/<%= @config.dig('home_path', 'dotfiles') %>"
export EXT_XDG_WALLPAPER_DIR="$(xdg-user-dir PICTURES)/wallpapers/"
export PATH="$HOME/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$EXT_XDG_DOTFILES_DIR/bin:$PATH"

# custom
export DOT_PROFILE="<%= @profile.number %>"

# fly
export FLYCTL_INSTALL="$HOME/.fly"
export PATH="$FLYCTL_INSTALL/bin:$PATH"

# rust
export PATH="$PATH:$HOME/.cargo/bin"

# android
export ANDROID_HOME="$HOME/.local/share/android"
export PATH="$PATH:$ANDROID_HOME/cmdline-tools/latest/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools/"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/emulator/bin64"

# golang
export GOBIN="$HOME/<%= @config.dig('home_path', 'gobin') %>"
export GOPATH="$HOME/<%= @config.dig('home_path', 'gopath') %>"

# environment
. "$HOME/.asdf/asdf.sh"
