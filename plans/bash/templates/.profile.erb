# Default variables
export EDITOR="nvim"
export GIT_EDITOR="$EDITOR"
export PAGER="less"
export LESS='-R --mouse --wheel-lines=3'
# export LESS="-iMSx4 -FX"

export ZK_NOTEBOOK_DIR="$HOME/notes"
export EXT_XDG_REPOS_DIR="$HOME/<%= @config.dig('home_path', 'repos') %>"
export EXT_XDG_DOTFILES_DIR="$HOME/<%= @config.dig('home_path', 'dotfiles') %>"
export EXT_XDG_WALLPAPER_DIR="$(xdg-user-dir PICTURES)/wallpapers/"
export FLYCTL_INSTALL="$HOME/.fly"
export PATH="$FLYCTL_INSTALL/bin:$PATH"
export DENO_INSTALL="$HOME/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"
export PATH="$HOME/.npm-packages/bin:$PATH"
export PATH="$HOME/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$EXT_XDG_DOTFILES_DIR/bin:$PATH"
export PATH="$PATH:$HOME/.rvm/bin"
export GOBIN="$HOME/<%= @config.dig('home_path', 'gobin') %>"
export GOPATH="$HOME/<%= @config.dig('home_path', 'gopath') %>"
[[ ! -e $HOME/.gem/ruby/bin ]] &&
  mkdir -p "$HOME/bin" "$HOME/.gem/ruby" &&
  ln -s $HOME/bin $HOME/.gem/ruby/
export DOT_PROFILE="<%= @profile.number %>"
