[credential]
	helper = /usr/libexec/git-core/git-credential-libsecret
[alias]
  resolve = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; nvim `f`"
  reword = commit --amend
  ci = commit
  st = status
  br = branch --show-current
  co = checkout
  fe = fetch
  pu = pull
  pushf = push --force-with-lease
  di = diff
  root = rev-parse --show-toplevel
  logo = log --oneline
  authors = log --pretty=format:'%an <%%ae>'
  amend = commit --amend --no-edit
[core]
	autocrlf = input
[commit]
	verbose = true
	; gpgsign = true
[github]
	user = vikdotdev
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  <% if @theme.dark? %>
	light = false
	dark = true
	syntax-theme = Dracula
  <% elsif @theme.light? %>
	light = true
	dark = false
	syntax-theme = Github
  <% end %>
  navigate = true
  side-by-side = true
[interactive]
  diffFilter = delta --color-only -s -n
[gpg]
	program = gpg
