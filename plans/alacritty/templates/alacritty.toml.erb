[font]
<% if @profile.in?(1) %>
size = 12
<% elsif @profile.in?(2, 3) %>
size = 14
<% end %>

[font.bold]
family = "Iosevka"
style = "Bold"

[font.normal]
family = "Iosevka"
style = "Regular"

[colors]
draw_bold_text_with_bright_colors = true

<% if @theme.dark? %>
[colors.cursor]
cursor = "#9e9e9e"
text = "#080808"

[colors.bright]
black = "<%= @colors.dark(:bright, :black) %>"
red = "<%= @colors.dark(:bright, :red) %>"
green = "<%= @colors.dark(:bright, :green) %>"
yellow = "<%= @colors.dark(:bright, :yellow) %>"
blue = "<%= @colors.dark(:bright, :blue) %>"
magenta = "<%= @colors.dark(:bright, :magenta) %>"
cyan = "<%= @colors.dark(:bright, :cyan) %>"
white = "<%= @colors.dark(:bright, :white) %>"

[colors.normal]
black = "<%= @colors.dark(:normal, :black) %>"
red = "<%= @colors.dark(:normal, :red) %>"
green = "<%= @colors.dark(:normal, :green) %>"
yellow = "<%= @colors.dark(:normal, :yellow) %>"
blue = "<%= @colors.dark(:normal, :blue) %>"
magenta = "<%= @colors.dark(:normal, :magenta) %>"
cyan = "<%= @colors.dark(:normal, :cyan) %>"
white = "<%= @colors.dark(:normal, :white) %>"

[colors.primary]
background = "<%= @colors.dark(:primary, :background) %>"
foreground = "<%= @colors.dark(:primary, :foreground) %>"

[colors.selection]
background = "#b2ceee"
text = "#080808"

<% elsif @theme.light? %>

[colors.primary]
background = "<%= @colors.light(:primary, :background) %>"
foreground = "<%= @colors.light(:primary, :foreground) %>"

[colors.normal]
black = "<%= @colors.light(:normal, :black) %>"
red = "<%= @colors.light(:normal, :red) %>"
green = "<%= @colors.light(:normal, :green) %>"
yellow = "<%= @colors.light(:normal, :yellow) %>"
blue = "<%= @colors.light(:normal, :blue) %>"
magenta = "<%= @colors.light(:normal, :magenta) %>"
cyan = "<%= @colors.light(:normal, :cyan) %>"
white = "<%= @colors.light(:normal, :white) %>"

[colors.bright]
black = "<%= @colors.light(:bright, :black) %>"
red = "<%= @colors.light(:bright, :red) %>"
green = "<%= @colors.light(:bright, :green) %>"
yellow = "<%= @colors.light(:bright, :yellow) %>"
blue = "<%= @colors.light(:bright, :blue) %>"
magenta = "<%= @colors.light(:bright, :magenta) %>"
cyan = "<%= @colors.light(:bright, :cyan) %>"
white = "<%= @colors.light(:bright, :white) %>"
<% end %>
