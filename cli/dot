require_rel '../lib/commands'

module Dotfiles
  class CLI < Thor
    desc 'build', 'build dotfiles'
    method_option :theme, aliases: '-t', desc: 'Theme dark/light'
    method_option :profile, aliases: '-p', desc: 'Machine profile'
    def build(args)
      puts args.inspect
      Build.new(theme: :dark).run
    end

