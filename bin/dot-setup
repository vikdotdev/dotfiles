#!/usr/bin/env bash

#sudo systemctl enable --now wpa_supplicant.service
#sudo systemctl restart NetworkManager.service
#sleep 10
sudo apt install -y ansible git ruby ruby-dev
ansible-galaxy collection install community.general
ansible-galaxy collection install community.mysql

export GEM_HOME=$HOME/.gem/ruby
if [ ! -e $HOME/.gem/ruby/bin ]; then
  mkdir -p "$HOME/bin" "$HOME/.gem/ruby" &&
  ln -s $HOME/bin $HOME/.gem/ruby/
fi

mkdir -p ~/repos
pushd ~/repos
[ ! -d dotfiles ] && git clone https://github.com/henriknelson/dotfiles
./dotfiles/bin/dot install
popd

# curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.39.1/install.sh | bash
# source ~/.nvm/nvm.sh && nvm install --lts
# npm -g install yarn
