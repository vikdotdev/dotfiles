#!/usr/bin/env bash

WALLPAPER_PATH="/home/$USER/Pictures/wallpapers/"

mkdir -p "$WALLPAPER_PATH"

RANDOM_IMAGE=$(ls -p $WALLPAPER_PATH | grep -v / | egrep '*.jpg|*.png|*.jpeg' | shuf -n 1)

ESCAPED_WALLPAPER_PATH=$(echo $WALLPAPER_PATH | sed 's;/;\\/;g')
feh --bg-fill $(echo $RANDOM_IMAGE | sed -e "s/^/$ESCAPED_WALLPAPER_PATH/")
