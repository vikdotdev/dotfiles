[user]
	email = vikdotdev@gmail.com
	name = Viktor Habchak
	signingkey = 7392D21113383CBB
[credential]
	helper = /usr/libexec/git-core/git-credential-libsecret
[alias]
  edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; nvim `f`"
  add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
  ci = commit
  st = status
  br = branch --show-current
  co = checkout
  fe = fetch
  cl = clean
  rs = restore
  rb = rebase
  pu = pull
  pf = push --force-with-lease
  cp = cherry-pick
  di = diff
  root = rev-parse --show-toplevel
  authors = log --pretty=format:'%an <%ae>'
[core]
	autocrlf = input
[commit]
	verbose = true
	; gpgsign = true
[github]
	user = vikdotdev
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  syntax-theme = Dracula
  navigate = true
  side-by-side = true
[interactive]
  diffFilter = delta --color-only -s -n
[gpg]
	program = gpg
