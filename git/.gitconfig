[user]
	email = vikdotdev@gmail.com
	name = Viktor Habchak
[credential]
  # on ubuntu
	# helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
	helper = libsecret
[alias]
  edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vim `f`"
  add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
  ci = commit
  st = status
  br = branch --show-current
  co = checkout
  fe = fetch
  cl = clean
  cherry = cherry-pick
  di = diff
  dif = diff
  res = restore
  authors = log --pretty=format:'%an <%ae>'
[core]
	autocrlf = input
[diff]
  ; command = git diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
[commit]
	verbose = true
[github]
	user = vikdotdev
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
  ; stash = delta

[delta]
  syntax-theme = Dracula
  navigate = true
  side-by-side = true

[interactive]
  diffFilter = delta --color-only -s -n
