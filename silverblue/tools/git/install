#!/bin/bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOT_HOME="$(dirname "$(dirname "$(dirname "$SCRIPT_DIR")")")"

source "$DOT_HOME/lib/colors.sh"
source "$DOT_HOME/lib/constants.sh"
source "$DOT_HOME/lib/utils.sh"
source "$DOT_HOME/lib/logging.sh"

MODULE="git"
init_module_logging "$MODULE"

log_header "Installing Git Tools"

# Git packages to install
PACKAGES=(
    "git"
    "gh"
    "git-credential-libsecret"
    "git-delta"
)

log_step "Installing git packages"
install_packages "${PACKAGES[@]}"

log_success "Git tools installation completed"
finalize_module_logging "success"