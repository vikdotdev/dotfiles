#!/bin/bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOT_HOME="$(dirname "$(dirname "$(dirname "$SCRIPT_DIR")")")"

source "$DOT_HOME/lib/colors.sh"
source "$DOT_HOME/lib/constants.sh"
source "$DOT_HOME/lib/utils.sh"
source "$DOT_HOME/lib/logging.sh"

MODULE="emacs"
init_module_logging "$MODULE"

log_header "Installing Emacs"

log_step "Installing native Emacs package"
if ! package_installed "emacs"; then
    install_packages "emacs"
else
    log_info "Emacs package already installed"
fi

log_success "Emacs installation completed"
finalize_module_logging "success"