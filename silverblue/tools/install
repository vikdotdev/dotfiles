#!/bin/bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOT_HOME="$(dirname "$(dirname "$SCRIPT_DIR")")"

source "$DOT_HOME/lib/colors.sh"
source "$DOT_HOME/lib/constants.sh"
source "$DOT_HOME/lib/utils.sh"
source "$DOT_HOME/lib/logging.sh"

MODULE="tools"
init_module_logging "$MODULE"

log_header "Installing Developer Tools"

# Developer tools to install
PACKAGES=(
    "curl" 
    "unzip"
    "ripgrep"
    "fd-find"
    "ImageMagick"
    "yt-dlp"
    "direnv"
    "texlive-scheme-full"
    "clang"
    "gcc"
    "gcc-c++"
    "make"
    "cmake"
    "autoconf"
    "automake"
    "libtool"
    "pkgconfig"
    "patch"
    "gettext"
)

log_step "Installing developer tools packages"
install_packages "${PACKAGES[@]}"

log_success "Developer tools installation completed"
finalize_module_logging "success"
