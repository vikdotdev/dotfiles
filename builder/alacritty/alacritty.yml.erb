draw_bold_text_with_bright_colors: true

font:
  size: <%= machine.laptop? ? 18 : 14 %>
  normal:
    family: 'Iosevka Curly'
    style: Regular
  bold:
    family: 'Iosevka Curly'
    style: Bold

key_bindings:
  - { key: P, mods: Control, action: Paste }

<% if theme.dark? %>
colors:
  cursor:
    text:   '#080808'
    cursor: '#9e9e9e'

  selection:
    text:       '#080808'
    background: '#b2ceee'

  primary:
    background: '0x24292e'
    foreground: '0xd1d5da'

  normal:
    black:   '0x586069'
    red:     '0xea4a5a'
    green:   '0x34d058'
    yellow:  '0xffea7f'
    blue:    '0x2188ff'
    magenta: '0xb392f0'
    cyan:    '0x39c5cf'
    white:   '0xd1d5da'

  bright:
    black:   '0x959da5'
    red:     '0xf97583'
    green:   '0x85e89d'
    yellow:  '0xffea7f'
    blue:    '0x79b8ff'
    magenta: '0xb392f0'
    cyan:    '0x56d4dd'
    white:   '0xfafbfc'

indexed_colors:
  - { index: 16, color: '0xd18616' }
  - { index: 17, color: '0xf97583' }

<% elsif theme.light? %>
colors:
  primary:
    background: '0xffffff'
    foreground: '0x24292f'

  normal:
    black:   '0x24292e'
    red:     '0xd73a49'
    green:   '0x28a745'
    yellow:  '0xdbab09'
    blue:    '0x0366d6'
    magenta: '0x5a32a3'
    cyan:    '0x0598bc'
    white:   '0x6a737d'

  bright:
    black:   '0x959da5'
    red:     '0xcb2431'
    green:   '0x22863a'
    yellow:  '0xb08800'
    blue:    '0x005cc5'
    magenta: '0x5a32a3'
    cyan:    '0x3192aa'
    white:   '0xd1d5da'

  indexed_colors:
    - { index: 16, color: '0xd18616' }
    - { index: 17, color: '0xcb2431' }
<% end %>
