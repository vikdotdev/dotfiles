tmux_conf_theme_status_right='#{pomodoro_status} #{prefix}#{pairing}#{synchronized} #{?battery_status, #{battery_status},}#{?battery_bar, #{battery_bar},}#{?battery_percentage, #{battery_percentage},}, %R , %d %b | #{username}#{root} | #{hostname} '

