# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym h       resize grow left 10 px or 2 ppt
  bindsym Shift+h resize shrink left 10 px or 2 ppt

  bindsym j       resize grow down 10 px or 2 ppt
  bindsym Shift+j resize shrink down 10 px or 2 ppt

  bindsym k       resize grow up 10 px or 2 ppt
  bindsym Shift+k resize shrink up 10 px or 2 ppt

  bindsym l       resize grow right 10 px or 2 ppt
  bindsym Shift+l resize shrink right 10 px or 2 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "move" {
  bindsym h move left
  bindsym j move down
  bindsym k move up
  bindsym l move right
  bindsym 1 move container to workspace $ws1; mode "default"
  bindsym 2 move container to workspace $ws2; mode "default"
  bindsym 3 move container to workspace $ws3; mode "default"
  bindsym 4 move container to workspace $ws4; mode "default"
  bindsym 5 move container to workspace $ws5; mode "default"
  bindsym 6 move container to workspace $ws6; mode "default"
  bindsym 7 move container to workspace $ws7; mode "default"
  bindsym 8 move container to workspace $ws8; mode "default"
  bindsym 9 move container to workspace $ws9; mode "default"
  bindsym 10 move container to workspace $ws10; mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+m mode "default"
}
# mode for moving tiles
bindsym $mod+m mode "move"

