[colors]
background = #aa333333
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
good = #aaff77
warning = #fba922
danger = #ff5555

[bar/top]
wm-restack = bspwm
enable-ipc = true

master-soundcard = hw:1
monitor = ${env:MONITOR:}
width = 100%
height = 28

background = ${colors.background}
spacing = 2
padding-right = 0
module-margin = 2

font-0 = Iosevka:size=10;3

modules-left = bspwm updates
modules-center = date
modules-right = layout xkeyboard pulseaudio cpu memory wlan battery powermenu

[global/wm]
override-redirect = false
margin-bottom = 0
margin-top = 0

[module/updates]
type = custom/script
format = <label>
;■ use that symbol for packages
exec = ~/.bin/scripts/polybar/updates.sh
interval = 300

[module/layout]
type = custom/script
format = <label>
exec = ~/.bin/scripts/polybar/layout.sh
interval = 1

[module/disk]
type = custom/script
format = <label>
label = root %output%
exec = ~/.bin/scripts/polybar/disk.sh /
interval = 5

ramp-capacity-0 = ▁
